body
	margin 0
	padding 65px 0 40px
	background #222
	font-size 16px
	line-height 1.5
	font-family: 'Ubuntu', Arial, Helvetica, sans-serif
	color #333
.wrapper
	width 780px
	margin 0 auto
	background #fff
	border-top 15px solid #fdb020
	border-bottom 15px solid #fdb020
.header
	position relative
	border-bottom 1px solid #dfdfdf
.menu
	list-style none
	position absolute
	padding 0
	margin 0
	top -28px
	li
		box-sizing: border-box
		width 42px
		height 42px
		border 3px solid #fdb020
		border-radius 21px
		background #fff
		margin  0 5px
		padding 0
		display inline-block
		&:hover
			animation both 1s bounce
		img
			padding 3px
			border none
.menu_left
	left 15px
.menu_right
	right 15px
	.phone__button
		width 160px
		cursor default
		&:hover
			animation none
		div
			float right
			height 36px
			line-height 36px
			padding-right 10px
			font-size 14px
.portrait
	padding 50px 0 50px 40px
	&:after
		display table
		clear both
		content ""
	&__img
		float left
		padding 10px
		border 1px solid #dedede
		width 125px
		height 125px
		margin-right 70px
		&:hover
			animation swing 1s both
			transform-origin center top
	&__name
		color #475261
		line-height normal
		h1
			padding 0
			padding-top 43px
			margin 0
			font-size 42px
			line-height 30px
			span
				font-size 22px
				margin 0
				letter-spacing 0.9px
.contacts
	list-style none
	padding 0
	margin 30px 0
	font-size 18px
	display none
.layout
	padding 0 50px 20px 40px
.chapter
	border-top 1px solid #dfdfdf
	&:after
		display table
		clear both
		content ""
	&:first-child
		border 0
	&__title
		width 220px
		float left
		padding 17px 0
		h2
			color #3c4756
			font-size 20px
			margin 0
			font-weight bold
			max-width 200px
	&__text
		margin-left 220px
		padding-top 20px
		margin-bottom 20px
		h3
			font-size 20px
			color #0066aa
			margin 0
		h4
			margin 0 0 20px
			font-size 15px
			line-height 1.47
		p
			margin 0 0 20px
		ul
			margin  20px 0
			padding-left 20px
			a
				text-decoration none
				color #333
		&_border
			border-top 1px solid #dfdfdf
.books:hover
	color #fdb020
.polaroids
	padding 0
	li
		display inline
		a
			float left
			width auto
			margin 30px
			box-shadow 0 3px 6px rgba(0,0,0,.25)
			transform rotate(-2deg)
			transition transform .15s linear
			img
				display block
				width 170px
.polaroids li:nth-child(2) a
	transform rotate(2deg)
.polaroids li:nth-child(3) a
	position relative
	transform rotate(-1deg)
	top: -5px
.polaroids li:nth-child(4) a
	transform rotate(5deg)
	position relative
	right: 5px
.polaroids li:nth-child(5) a
	position relative
	right 5px
	top 4px
.polaroids li:nth-child(6) a
	transform: rotate(-5deg);
	position relative
	left 5px
	top: -3px
.polaroids li a:hover
	transform scale(1.35)
	box-shadow 0 3px 6px rgba(0,0,0,.5)
	position relative
	z-index 5
@keyframes swing {
	20% { transform: rotate(8deg); }
	40% { transform: rotate(-6deg); }
	60% { transform: rotate(4deg); }
	80% { transform: rotate(-3deg); }
	100% { transform: rotate(0deg); }
}
@keyframes bounce {
	0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
	40% {transform: translateY(-10px);}
	60% {transform: translateY(-5px);}
}
.come-back-button
	background #fff
	position fixed
	top 200px
	left -5px
	width 152px
	height 60px
	border 3px solid #fdb020
	border-radius 0 30px 30px 0
	padding 3px
	box-sizing border-box
	border-left none
	a
		display block
		height 48px
		width 205px
		text-decoration none
		color #000
		max-width 120px
		font-weight bold
		text-align center
		padding 0 10px
		font-size 16px

